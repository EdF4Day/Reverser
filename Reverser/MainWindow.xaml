<Window x:Class="Reverser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reverser"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="36">
    <Grid>
        <Button x:Name="ForwardButton" Content="&#x2794;" ToolTip="Forward" 
                HorizontalAlignment="Left" Margin="425,186,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="BackButton" Content="&#x2794;" ToolTip="Back" 
                HorizontalAlignment="Left" Margin="544,264,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.5,0.5">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1" ScaleX="-1"/>
                    <SkewTransform AngleY="0" AngleX="0"/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

    </Grid>
</Window>
